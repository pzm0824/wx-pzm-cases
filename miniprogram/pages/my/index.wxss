/* pages/my/index.wxss */

.my {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
}

.solid-1px {
  position: relative;
  border: none;
}

.solid-1px:after {
  content: '';
  position: absolute;
  top: 0;
  background: rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

.bg-color {
  position: relative;
  height: 240rpx;
  background: linear-gradient(45deg, #1aad19, #1cbbb4);
  border-radius: 10rpx;
  box-shadow: 1px 1px 10px #54cac4;
}

.my-img {
  margin-left: 30rpx;
  margin-right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.my-con {
  display: flex;
  flex-wrap: wrap;
  height: 100%;
  align-items: center;
}

.my-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.my-msg {
  width: 360rpx;
}

.my-msg text {
  display: block;
  color: #fff;
}

.my-msg .tag {
  margin-top: 30rpx;
}

.my-msg .my-tag {
  padding: 4rpx 0;
  width: 120rpx;
  text-align: center;
  background-color: #000;
  border-radius: 30rpx;
  padding-left: 20rpx;
}

.my-msg .my-identity {
  position: relative;
  width: 120rpx;
  height: 40rpx;
}

.my-msg .members {
  position: absolute;
  bottom: 4rpx;
  left: -14rpx;
  background-color: yellow;
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
}

.my-set {
  align-self: stretch;
}

.my-set-box {
  padding: 20rpx 20rpx;
}

.my-set .icon {
  margin-right: 6rpx;
}

.my-menu, my-service, .my-about {
  position: relative;
}
/* 当遇到 list被button包裹住时 */
.my-service button {
  padding: 0 !important;
  border: none;
  background-color: #fff;
  line-height: 44rpx;
}

.my-service button::after {
  border: 0;
}

.game-over {
  padding: 30rpx;
  text-align: center;
  color: #888;
}
