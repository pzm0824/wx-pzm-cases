/* pages/my/index.wxss */

.my {
  padding: 20rpx;
  background-color: #fff;
}

.bg-color {
  position: relative;
  height: 240rpx;
  background: linear-gradient(45deg, #1aad19, #1cbbb4);
  border-radius: 10rpx;
  box-shadow: 1px 1px 10px #54cac4;
}

.my-img {
  margin-left: 30rpx;
  margin-right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.my-con {
  display: flex;
  flex-wrap: wrap;
  height: 100%;
  align-items: center;
}

.my-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.my-msg {
  width: 360rpx;
}

.my-msg text {
  display: block;
  color: #fff;
}

.my-msg .my-name {
  /* margin-top: -20rpx; */
}

.my-msg .tag {
  margin-top: 30rpx;
}

.my-msg .my-tag {
  padding: 4rpx 0;
  width: 120rpx;
  text-align: center;
  background-color: #000;
  border-radius: 30rpx;
  padding-left: 20rpx;
}

.my-msg .my-identity {
  position: relative;
  width: 120rpx;
  height: 40rpx;
}

.my-msg .members {
  position: absolute;
  bottom: 4rpx;
  left: -14rpx;
  background-color: yellow;
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
}

.my-set {
  align-self: stretch;
}

.my-set-box {
  padding: 20rpx 20rpx;
}

.my-set .icon {
  margin-right: 6rpx;
}
