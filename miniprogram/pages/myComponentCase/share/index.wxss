page {
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.share {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
  line-height: 80rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.modal-box {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
  z-index: 100;
  background-color: #fff;
  transition: all 0.6s ease-in-out;
}

.bottom-modal .modal-box-left {
  text-align: center;
  flex: 1;
  border-right: 2rpx solid #f2f2f2;
}

.bottom-modal .modal-box-right {
  flex: 1;
  text-align: center;
}

/* 底部弹出 */

.modal-box.bottom-modal {
  transform: translate(0,100%);
  /* bottom:-100%;  */
}

.modal-box.bottom-modal.show {
  transform: translate(0,0);
}

.board {
  position: fixed;
  top: 2000rpx;
}

.mark-share {
  position: fixed;
  padding: 20rpx 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 100;
  text-align: center;
  height: 1000rpx;
  width: 100%;
  transform: translate(0, 100%);
  transition: all 0.6s ease-in-out 0;
}

.mark-share.show {
  transform: translate(0, 0);
}

.share-image {
  width: 500rpx;
  height: 750rpx;
  margin: 20rpx auto;
}

.save-img {
  background-color: #d75547;
  color: #fff;
  width: 700rpx;
  margin: 20rpx auto;
}

.mark-share-txt {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
}
