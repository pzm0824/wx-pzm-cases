/* component/testShare/index.wxss */

.share {
  position: fixed;
  top: 0;
  left: 0;
  min-height: 100vh;
  width: 100%;
  background: rgba(0, 0, 0, .7);
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
  z-index: 99999;
}

.share.show {
  visibility: visible;
  opacity: 1;
}

.share .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.share .content .footer {
  width: 640rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  font-size: 28rpx;
}



.share .content .footer .save {
  margin: 40rpx auto;
  width: 270rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
}

.share.show .content .canvas {
  display: inline-block;
}

.share .content .canvas {
  display: inline-block;
  /* background: #fff; */
  width: 640rpx;
  height: 930rpx;
}
